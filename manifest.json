{
  "manifest_version": 3,
  "name": "VOIS Test Data Extension",
  "version": "1.2.0",
  "description": "A Chrome extension to manage test data for VOIS.",
  "permissions": [
    "cookies",
    "storage",
    "scripting",
    "activeTab",
    "browsingData",
    "tabs",
    "sidePanel"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "src/features/testDataManager/testDataManager.html"
  },
  "icons": {
    "16": "src/assets/icons/icon-16.png",
    "48": "src/assets/icons/icon-48.png",
    "128": "src/assets/icons/icon-128.png"
  },
  "side_panel": {
    "default_path": "src/features/testDataManager/testDataManager.html"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "src/utils/tiptap/*.css", 
        "src/utils/tiptap/*.js", 
        "dist/*.js",
        "src/components/navBar/*.css",
        "src/components/footer/*.css",
        "tiptap/app/**",
        "tiptap/components/**",
        "tiptap/lib/**",
        "tiptap/hooks/**",
        "src/utils/selectorhub/content-script/injectedScript.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
